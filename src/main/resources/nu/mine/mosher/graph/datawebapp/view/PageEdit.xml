<?xml version="1.0" encoding="UTF-8"?>
<wicket:extend xmlns="http://www.w3.org/1999/xhtml" xmlns:wicket="http://wicket.apache.org">
    <h3 wicket:id="entity"/>
    <form wicket:id="form">
        <p>
            <button wicket:id="cancel"><wicket:message key="cancel"/></button>
        </p>
        <table style="width:100%">
            <colgroup>
                <col style="width:fit-content"/>
                <col style="width:auto"/>
            </colgroup>
            <tbody>
                <tr wicket:id="properties">
                    <td><span wicket:id="name"/></td>
                    <td><span wicket:id="entry"/></td>
                </tr>
            </tbody>
        </table>
        <p>
            <input type="submit" value="save"/>
        </p>



        <wicket:fragment wicket:id="entryText">
            <input style="width:100%; font-family:unset; font-size:unset" wicket:id="property"/>
        </wicket:fragment>

        <wicket:fragment wicket:id="entryCheckbox">
            <input type="checkbox" wicket:id="property"/>
        </wicket:fragment>
    </form>
</wicket:extend>
